{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "camelcase": "off",
        "new-cap": "off",
        "max-len": [
            "error",
            {
                "code": 150
            }
        ],
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "semi": [
            "error",
            "never"
        ],
        "object-curly-spacing": [
            2,
            "always"
        ],
        "require-jsdoc": 0,
        "space-infix-ops": [
            "error",
            {
                "int32Hint": false
            }
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "no-undef": [
            "error"
        ],
        "linebreak-style": ["error", "windows"]
    },
    "ignorePatterns": [
        "**/*.json"
    ]
}